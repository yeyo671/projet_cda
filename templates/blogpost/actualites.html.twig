{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<!-- ARTICLES -->
<section class="pt-7 pt-md-10">
   <div class="container">
      <div class="row">
         <div class="col-12">
            <h2 class="mb-0">
               Mes actualités
            </h2>
            <p class="mb-5 text-muted">
               The span the grid's entire width with several options
            </p>
            {% for blogpost in blogposts %}
            <!-- Card -->
            <div class="card card-row shadow-light-lg mb-6 lift lift-lg" data-aos="fade-in">
               <div class="row gx-0">
                  <a class="col-12 col-md-6 order-md-2 bg-cover card-img-end" style="background-image: url(/img/blogpost.jpg);" href="{{path('actualites_details', {'slug': blogpost.slug})}}">
                     <!-- Image (placeholder) -->
                     <img src='/img/peinture.png' alt="..." class="img-fluid d-md-none invisible">
                     <!-- Shape -->
                     <div class="shape shape-start shape-fluid-y text-white d-none d-md-block">
                        <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg">
                           <path d="M0 0h62.759v172C38.62 384 112 517 112 517v173H0V0z" fill="currentColor"/>
                        </svg>
                     </div>
                  </a>
                  <div class="col-12 col-md-6 order-md-1">
                     <!-- Body -->
                     <a class="card-body">
                        <!-- Heading -->
                        <h3>
                           {{blogpost.title}}
                        </h3>
                        <!-- Text -->
                        <p class="mb-0 text-body-secondary">
                          {{blogpost.content|u.truncate(200,'...',false)}}
                        </p>
                     </a>
                     <!-- Meta -->
                     <a class="card-meta">
                        <!-- Divider -->
                        <hr class="card-meta-divider">
                        <!-- Date -->
                        <p class="h6 text-uppercase text-body-secondary mb-0 ms-auto">
                           <time datetime="2019-05-02">Réalisée le {{blogpost.date|date('d/m/Y')}}</time>
                        </p>
                     </a>
                  </div>
               </div>
               <!-- / .row -->
            </div>
            {% endfor %}
         </div>
      </div>
      <!-- / .row -->
   </div>
   <!-- / .container -->
   <div class="d-flex justify-content-center">
        {% do blogposts .setPageRange(2) %}
        {{knp_pagination_render(blogposts, 'base/pagination.html.twig')}}
   </div>
</section>
{% endblock %}
