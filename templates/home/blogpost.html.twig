<!-- ARTICLES -->
<section class="pt-7 pt-md-10" style="margin-bottom: 50px;">
   <div class="container">
      <div class="row align-items-center mb-5">
         <div class="col-12 col-md">
            <!-- Heading -->
            <h3 class="mb-0">
               Latest Stories
            </h3>
            <!-- Text -->
            <p class="mb-0 text-body-secondary">
               Here’s what we've been up to recently.
            </p>
         </div>
         <div class="col-12 col-md-auto">
            <!-- Button -->
            <a href="#!" class="btn btn-sm btn-outline-gray-300 d-none d-md-inline">
            View all
            </a>
         </div>
      </div>
      <!-- / .row -->
      <div class="row">
        {% for blogposts in blogposts %}
         <div class="col-12 col-md-6 col-lg-4 d-flex">
            <!-- Card -->
            <div class="card mb-6 mb-lg-0 shadow-light-lg lift lift-lg">
               <!-- Image -->
               <a class="card-img-top" href="#!">
                  <!-- Image -->
                  <img src="/img/peinture.png" alt="..." class="card-img-top">
                  <!-- Shape -->
                  <div class="position-relative">
                     <div class="shape shape-bottom shape-fluid-x text-white">
                        <svg viewBox="0 0 2880 480" fill="none" xmlns="http://www.w3.org/2000/svg">
                           <path fill-rule="evenodd" clip-rule="evenodd" d="M2160 0C1440 240 720 240 720 240H0v240h2880V0h-720z" fill="currentColor"/>
                        </svg>
                     </div>
                  </div>
               </a>
               <!-- Body -->
               <a class="card-body" href="#!">
                  <!-- Heading -->
                  <h3>
                     {{blogposts.title}}
                  </h3>
                  <!-- Text -->
                  <p class="mb-0 text-body-secondary">
                     {{blogposts.content|u.truncate(200,'...',false)}}
                  </p>
               </a>
               <!-- Meta -->
               <a class="card-meta mt-auto" href="#!">
                  <!-- Divider -->
                  <hr class="card-meta-divider">
                  <!-- Date -->
                  <p class="h6 text-uppercase text-body-secondary mb-0 ms-auto">
                     <time datetime="2019-05-02">Publiée le {{blogposts.date|date('d/m/Y')}}</time>
                  </p>
               </a>
            </div>
         </div>
        {% endfor %}
      </div>
      <!-- / .row -->
   </div>
   <!-- / .container -->
</section>